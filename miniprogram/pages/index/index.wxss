.web-view-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: white;
  z-index: 999;
}

.back-button {
  position: absolute;
  top: 0;
  left: 0;
  padding: 10px;
}

.time-section {
  font-size: 28rpx;
  line-height: 1.5;
  text-align: center;
  color: #333;
  margin-top: 30rpx;
}

.user-info {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.user-info__item {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.user-info__label {
  color: #999;
  font-size: 24rpx;
  width: 150rpx;
}

.user-info__value {
  font-size: 24rpx;
  flex: 1;
  text-align: right;
}

.temp-section {
  font-size: 24rpx;
  line-height: 1.5;
  text-align: center;
  color: #666;
  margin-top: 10rpx;
}

.btns {
  display: flex;
  flex-direction: row;
}

